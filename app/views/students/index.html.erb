<div class="container mx-auto px-4">
  <p style="color: green"><%= notice %></p>
  <div class="display: block">
    <%= search_form_for @q do |f| %>
      <div class="display: block">
        <h4># Search if the first_name field contains...</h4>
        <%= f.label :first_name_cont %>
        <%= f.search_field :first_name_cont %>
      </div>
      <div class="display: block">
        <h4># Search first_name or last_name...</h4>
        <%= f.label :first_name_or_last_name_cont %>
        <%= f.search_field :first_name_or_last_name_cont %>
      </div>
      <div class="display: block">
        <h4># Subjects...</h4>
        <%= f.label :first_name_or_subjects_name_cont %>
        <%= f.search_field :first_name_or_subjects_name_cont %>
      </div>
      <%= f.submit %>
    <% end %>
  </div>
  <h1 class="mb-4 text-4xl font-extrabold text-black-600 dark:text-black-500">
    Students List
  </h1>
  <div class="display: block">
    <%= link_to "New student", new_student_path, class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
  </div>
  <div id="students" class="display: block">
    <% @students.each do |student| %>
      <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400 border-collapse border-separate  border border-slate-400 ">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="px-6 py-3 border border-slate-300">Name</th>
          <th scope="col" class="px-6 py-3 border border-slate-300">Age</th>
          <th scope="col" class="px-6 py-3 border border-slate-300">Action</th>
        </tr>
        </thead>
        <tbody>
        <tr scope="row" class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
          <td class="px-6 py-4 border border-slate-300 w-32">
            <svg class="w-6 h-6 text-gray-800 dark:text-white display: inline" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-width="2" d="M7 17v1c0 .6.4 1 1 1h8c.6 0 1-.4 1-1v-1a3 3 0 0 0-3-3h-4a3 3 0 0 0-3 3Zm8-9a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
            </svg>
            <%= "#{student.first_name} #{student.last_name}" %></td>
          <td class="px-6 py-4 border border-slate-300 w-32">
            <%= student.age %></td>
          <td class="px-6 py-4 border border-slate-300 w-32">
            <%= link_to 'Show', student, class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
          </td>
        </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
